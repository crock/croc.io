<section class="mb-4">
    <h2 class="text-2xl font-black">{{ title }}</h2>
    <ul class="list-inside list-disc">
        {% for item in collections[collectionName] %}
            <li>{% if item.href %}<a rel="nofollow" target="_blank" class="text-primary hover:text-primary-light" href="{{ item.href }}">{{item.title}}</a>{% else %}{{ item.title  }}{% endif %}</li>
        {% endfor %}
    </ul>
</section>