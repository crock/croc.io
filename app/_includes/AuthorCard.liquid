<div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg w-full h-auto p-6 mt-4">
    <div class="grid grid-cols-2 gap-4">
        {% if avatarUrl  %}
        <div class="w-full h-full flex justify-center items-center"><img src="{{ avatarUrl }}" alt={name} width="250" height="250" /></div>
        {% endif  %}
        <div class="flex flex-col justify-start items-start">
            <h2 class="font-bold text-gray-900 dark:text-gray-50 text-lg mb-2">{{ name }} <span class="sr-only">(Author)</span></h2>

            {% if bio  %}
            <p class="leading-relaxed font-normal text-black dark:text-white text-base">{{ bio }}</p>
            {% endif  %}

            {% if cta and url  %}
            <a class="py-2 px-4 bg-primary hover:bg-primary-light text-sm font-semibold uppercase mt-3" rel="ugc" href="{{ url }}">{{ cta }}</a>
            {% endif  %}
        </div>
    </div>
</div>